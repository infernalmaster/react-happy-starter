{
  "presets": ["es2015", "stage-2", "react"],
  "env": {
    "development": {
      "plugins": [
        "transform-runtime",
        ["react-transform", {
          "transforms": [{
            "transform": "react-transform-hmr",
            "imports": ["react"],
            "locals": ["module"]
          }]
        }],

        ["typecheck", {
          "disable": {
            "production": true
          }
        }],
        "syntax-flow",
        "transform-flow-strip-types"
      ]
    }
  }
}
